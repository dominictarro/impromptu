repos:
- repo: https://github.com/commitizen-tools/commitizen
  rev: v2.20.3
  hooks:
    - id: commitizen
      stages: [commit-msg]
- repo: local
  hooks:
  - id: unittest
    name: unittest
    language: python
    entry: make
    args: [unittest]
    verbose: true
    pass_filenames: false
    stages: ['commit', 'manual']
